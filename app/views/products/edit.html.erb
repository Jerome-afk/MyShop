<div class="product-form-container">
  <h1>Edit Product</h1>

  <%= form_with model: @product, local: true do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="form-group">
      <%= form.label :brand %>
      <%= form.text_field :brand %>
    </div>

    <div class="form-group">
      <%= form.label :model %>
      <%= form.text_field :model %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div class="form-group">
      <%= form.label :condition %>
      <%= form.select :condition, ['New', 'Used', 'Refurbished'], selected: @product.condition %>
    </div>

    <div class="form-group">
      <%= form.label :finish %>
      <%= form.text_field :finish %>
    </div>

    <div class="form-group">
      <%= form.label :price %>
      <%= form.number_field :price, step: 0.01 %>
    </div>

    <div class="form-group">
      <%= form.label :color %>
      <%= form.text_field :color %>
    </div>

    <div class="form-group">
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>

    <div class="form-group">
      <%= form.submit "Update Product" %>
    </div>
  <% end %>
</div>
